<div class="lg:w-3/4 mx-auto text-center">
  <h1 class="text-4xl font-bold text-center mt-20 mb-10"><%= t('.title') %></h1>
  <div class="container lg:w-3/4 mx-auto">
    <div class="row">
      <div class="col-md-10 offset-md-1">
        <%= form_with model: @user, url: password_reset_path(@token), local: true do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <div class="mb-10">
            <%= f.label :password, class: "block text-sm font-medium text-gray-700 text-xl mb-2" %>
            <%= f.password_field :password, class: "input input-bordered w-full max-w-xs" %>
          </div>
          <div class="mb-10">
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 text-xl mb-2" %>
            <%= f.password_field :password_confirmation, class: "input input-bordered w-full max-w-xs" %>
          </div>
          <%= f.submit class: 'btn btn-neutral mb-10' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
