<script src="https://accounts.google.com/gsi/client" async defer></script>
<div class="container mx-auto flex justify-center items-center h-screen">
  <div class="flex justify-center">
    <div class="w-full md:w-10/12 lg:w-8/12 md:px-4 lg:px-8">
      <h1><%= t '.title' %></h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
          <%= f.label :email, User.human_attribute_name(:email)  %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      <div class="actions">
        <%= f.submit t('defaults.login'), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
        </div>
      <% end %>
      <div class='text-center'>
      <%= link_to (t '.to_register_page'), new_user_path %>
      <%= link_to t('.password_forget'), new_password_reset_path %>
      </div>
      <div id="g_id_onload"
        data-client_id="323169411967-dfj3chkg4vh838qf8pr72782f3ebmfl4.apps.googleusercontent.com"
        data-login_uri="https://soramix2-english-a3b76295d918.herokuapp.com/google_login_api/callback"
        data-auto_prompt="false">
      </div>
      <div class="g_id_signin"
        data-type="standard"
        data-size="large"
        data-theme="outline"
        data-text="sign_in_with"
        data-shape="rectangular"
        data-logo_alignment="left">
      </div>
    </div>
  </div>
</div>
