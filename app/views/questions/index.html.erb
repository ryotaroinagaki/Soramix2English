<div class="py-10 px-3 md:container md:mx-auto">
  <div class="text-center">
    <h2 class="font-bold text-xl md:text-3xl lg:text-3xl mb-12"><%= t('.questions') %></h2>
  </div>
  <div class="place-items-center px-5 grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <div class="card w-96 bg-base-100 shadow-xl mb-7 md:w-11/12 lg:w-11/12 xl:w-96 2xl:w-10/12">
        <div class="card-body">
          <h2 class="card-title">Easy</h2>
          <div class="card-actions justify-end">
            <p><%= t('.easy') %></p>
            <%= link_to difficulty_questions_path('easy') do %>  
              <button class="btn btn-neutral text-white">Easy</button>
            <% end %>  
          </div>
        </div>
      </div>
      <div class="card w-96 bg-base-100 shadow-xl mb-7 md:w-11/12 lg:w-11/12 xl:w-96 2xl:w-10/12">
        <div class="card-body">
          <h2 class="card-title">Normal</h2>
          <div class="card-actions justify-end">
            <p><%= t('.normal') %></p>
            <%= link_to difficulty_questions_path('normal') do %>  
              <button class="btn btn-neutral text-white">Normal</button>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card w-96 bg-base-100 shadow-xl mb-7 md:w-11/12 lg:w-11/12 xl:w-96 2xl:w-10/12">
        <div class="card-body">
          <h2 class="card-title">Difficult</h2>
          <div class="card-actions justify-end">
            <p><%= t('.difficult') %></p>
            <%= link_to difficulty_questions_path('difficult') do %>  
              <button class="btn btn-neutral text-white">Difficult</button>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card mb-8 w-96 bg-base-100 shadow-xl md:w-11/12 lg:w-11/12 xl:w-96 2xl:w-10/12">
        <div class="card-body">
          <h2 class="card-title"><%= t('.recommend') %></h2>
          <p><%= t('.recommend_text') %></p>
          <div class="card-actions justify-end">
            <% if @recommend_questions.empty? %>
            <p class="text-sm">※現在おすすめのクイズがありません</p>
            <p class="text-sm">好きなクイズをブックマークしてみましょう！</p>
            <% else %>
              <% @recommend_questions.each do |question| %>
                <%= link_to recommend_question_path(id:question) do %>
                  <button class="btn btn-neutral text-white">Recommend</button>
                <% end %>
                <% break %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card mb-8 w-96 bg-base-100 shadow-xl md:w-11/12 lg:w-11/12 xl:w-96 2xl:w-10/12">
        <div class="card-body">
          <h2 class="card-title"><%= t('.bookmark') %></h2>
          <p><%= t('.bookmark_text') %></p>
          <div class="card-actions justify-end">
          <%= link_to bookmarks_questions_path do %>  
            <button class="btn btn-neutral text-white">Bookmark</button>
          <% end %>  
          </div>
        </div>
      </div>
      <div class="card mb-8 w-96 bg-base-100 shadow-xl md:w-11/12 lg:w-11/12 xl:w-96 2xl:w-10/12">
        <div class="card-body">
          <h2 class="card-title">クイズ検索</h2>
          <p>クイズを一覧から検索できます</p>
          <div class="card-actions justify-end">
          <%= link_to questions_questions_path do %>  
            <i class="fa-solid fa-magnifying-glass text-5xl"></i>
          <% end %>  
          </div>
        </div>
      </div>
  </div>
</div>