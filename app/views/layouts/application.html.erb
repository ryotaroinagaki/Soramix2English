<!DOCTYPE html>
<html data-theme="fantasy">
  <head>
    <title>空耳English</title>
    <%= favicon_link_tag('favicon.ico') %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= javascript_include_tag 'party' %>
    <%= javascript_include_tag 'speech_recognition' %>
    <%= javascript_include_tag 'speech_synthesis' %>
    <script src="https://kit.fontawesome.com/67515df7cb.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/party-js@latest/bundle/party.min.js"></script>
    <%= display_meta_tags(default_meta_tags) %>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-75N7EYBQSM"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-75N7EYBQSM');
    </script>
  </head>

  <body>
    <div class="flex flex-col min-h-screen bg-gray-50">
      <%= render 'shared/header' %>
      <%= render 'shared/flash_message' %>
      <%= yield %>
      <%= render 'shared/footer' %>
    </div>
  </body>
</html>
