<div class="py-10 px-3 md:container md:mx-auto">
  <div class="text-center">
    <h2 class="font-bold text-xl md:text-3xl lg:text-3xl mb-6"><%= t('.ranking') %></h2>
  </div>
  <% @question_ranking.each.with_index(1) do |question, i| %>
    <div class="place-items-center px-5 grid grid-cols-1">
      <div class="place-items-center px-5 grid grid-cols-1">
        <h1 class="font-bold text-xl md:text-2xl lg:text-2xl mb-2">第<%= i %>位</h1>
      </div>
      <div class="place-items-center px-5 grid grid-cols-1 mb-10">
        <%= render question %>
      </div>
    </div>
  <% end %>
</div>