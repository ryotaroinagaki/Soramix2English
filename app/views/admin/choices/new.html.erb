<div class="container">
    <h1 class="text-3xl pt-10 ml-10"><%= t '.title' %></h1>
    <div class="text-black w-36 text-center">
        <%= @question.id %>
    </div>
    <div class="flex justify-center">
        <%= form_with model: @form, url: admin_choices_path, local: true do |f| %>
            <div class = 'form-group py-2'>
                <%= f.fields_for :choices do |i| %>
                    <div class = 'form-group py-2'>
                        <%= i.label :question_id, class: "text-font-color text-3xl" %>
                        <%= i.number_field :question_id, value: @question.id, class: "form-control mb-3 py-2 px-10 mt-3 text-2xl" %>
                    </div>
                    <div class = 'form-group py-2'>
                        <%= i.label :choice, class: "text-font-color text-3xl" %>
                        <%= i.text_area :choice,  class: "form-control mb-3 py-2 px-10 mt-3 text-2xl" %>
                    </div>
                    <div class = 'form-group py-2'>
                        <%= i.label :is_answer, class: "text-font-color text-3xl" %>
                        <%= i.select :is_answer, [['false'], ['true']] ,class: "form-control mb-3 py-2 px-10 mt-3 text-2xl" %>
                    </div>
                <% end %>
            </div>
            <%= f.submit %>
        <% end %>
    </div>
</div>