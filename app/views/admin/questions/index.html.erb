<div class="container mb-5 pt-2">
  <h1><%= t('.title') %>クイズ一覧ページ</h1>
  <div class="row">
    <div class="col-md-12 mb-3">
    <%= link_to t('defaults.create'), new_admin_music_path, class: 'btn btn-danger' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col"><%= User.human_attribute_name(:id) %></th>
          <th scope="col"><%= User.human_attribute_name(:difficulty) %></th>
          <th scope="col"><%= User.human_attribute_name(:created_at) %></th>
          <th scope="col"><%= User.human_attribute_name(:created_at) %></th>
        </tr>
        </thead>
        <tbody>
        <% @questions.each do |question| %>
          <tr>
          <td>
            <%= question.id %>
          </td>
          <td>
            <%= question.difficulty %>
          </td>
          <td>
            <%= question.music.artist_name %>
          </td>
          <td>
            <%= question.music.music_name %>
          </td>
          <td>
            <%= link_to t('defaults.show'), admin_question_path(question), data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
            <%= link_to t('defaults.delete'), admin_question_path(question), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
          </td>
        </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <!-- ページネーション -->
    </div>
  </div>
</div>