<header>
  <nav class="flex items-center justify-between flex-wrap bg-blue-300 p-2 ">
    <div ir="ltr" class="flex items-center flex-shrink-0 text-white mr-6">
      <span class="font-semibold text-2xl tracking-tight ms-8">
        <%= link_to (t 'defaults.app_name'), questions_path %>
      </span>
    </div>
    <div dir="rtl">
      <div class="md:ml-auto flex flex-wrap items-center md:text-xl justify-center ms-8">
        <% if logged_in? %>
          <div class="dropdown dropdown-hover dropdown-end">
            <label tabindex="0" class="btn m-1"><%= t('defaults.profiles') %></label>
            <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-40 text-center">
              <%= link_to t('defaults.profiles'), profile_path, class: "btn btn-base-100 btn-sm my-1" %>
              <%= link_to t('profiles.edit.title'), edit_profile_path, class: "btn btn-base-100 btn-sm my-1" %>
              <%= link_to "ブックマーク", bookmarks_questions_path, class: "btn btn-base-100 btn-sm my-1" %>
              <%= link_to t('defaults.logout'), logout_path, data: { turbo_method: :delete }, class: "btn btn-error btn-sm my-1" %>
            </ul>
          </div>
          <%= link_to rankings_path do %>
            <button class="btn btn-100"><%= t('defaults.ranking') %></button>
          <% end %>
          <div class="dropdown dropdown-hover dropdown-end">
            <label tabindex="0" class="btn m-1"><%= (t 'defaults.questions') %></label>
            <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-32">
              <%= link_to (t 'defaults.questions'), questions_path, class: "btn btn-base-100 btn-sm my-1" %>
              <%= link_to "Easy", difficulty_questions_path('easy'), class: "btn btn-base-100 btn-sm my-1" %>
              <%= link_to "Normal", difficulty_questions_path('normal'), class: "btn btn-base-100 btn-sm my-1" %>
              <%= link_to "Difficult", difficulty_questions_path('difficult'), class: "btn btn-base-100 btn-sm my-1" %>
            </ul>
          </div>
          <%= link_to questions_questions_path do %>
            <i class="fa-solid fa-magnifying-glass text-2xl mr-2"></i>
          <% end %>
        <% else %>
          <div class="dropdown dropdown-hover dropdown-end">
            <label tabindex="0" class="btn m-1"><%= t('defaults.login') %></label>
            <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-36 text-center">
              <%= link_to t('defaults.login'), login_path, class: "btn btn-base-100 my-1" %>
              <%= link_to t('users.new.title'), new_user_path, class: "btn btn-base-100 my-1" %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
</header>
